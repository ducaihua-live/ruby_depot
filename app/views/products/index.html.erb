<% turbo_stream_from "products" %>
<% turbo_refreshes_with method: :morph, scroll: :preserve %>

<div class="w-full max-w-7xl mx-auto">
  <% if notice.present? %>
    <div class="mb-6">
      <p class="py-3 px-4 bg-green-50 border border-green-200 text-green-800 font-medium rounded-lg shadow-sm" id="notice">
        <%= notice %>
      </p>
    </div>
  <% end %>

  <div class="flex flex-col sm:flex-row justify-between items-center mb-8 pb-6 border-b border-gray-200">
    <h1 class="text-4xl font-bold text-gray-900 mb-4 sm:mb-0">Products</h1>
    <%= link_to "New product", new_product_path, class: "inline-flex items-center rounded-lg py-3 px-6 bg-green-600 hover:bg-green-700 text-white font-medium shadow-md hover:shadow-lg transition-all duration-200" %>
  </div>
  
  <div id="products" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @products.each do |product| %>
      <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden border border-gray-100">
        <% if product.image.attached? %>
          <div class="w-full h-48 bg-gray-100 overflow-hidden">
            <%= image_tag(product.image, class: 'w-full h-full object-cover') %>
          </div>
        <% end %>
        
        <div class="p-6">
          <h2 class="text-xl font-bold text-gray-900 mb-3"><%= product.title %></h2>
          
          <p class="text-gray-600 mb-4 line-clamp-3">
            <%= truncate(strip_tags(product.description), length: 120) %>
          </p>
          
          <div class="flex items-center justify-between mb-4">
            <p class="text-2xl font-bold text-green-600">
              <%= number_to_currency(product.price) %>
            </p>
          </div>

          <div class="flex flex-wrap gap-2 pt-4 border-t border-gray-100">
            <%= link_to "Show", product, class: "text-sm px-4 py-2 bg-blue-50 hover:bg-blue-100 text-blue-700 rounded-md font-medium transition-colors duration-200" %>
            <%= link_to "Edit", edit_product_path(product), class: "text-sm px-4 py-2 bg-gray-50 hover:bg-gray-100 text-gray-700 rounded-md font-medium transition-colors duration-200" %>
            <%= button_to "Destroy", product, method: :delete, class: "text-sm px-4 py-2 bg-red-50 hover:bg-red-100 text-red-700 rounded-md font-medium transition-colors duration-200", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <% if @products.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg mb-4">No products yet.</p>
      <%= link_to "Create your first product", new_product_path, class: "inline-flex items-center rounded-lg py-3 px-6 bg-green-600 hover:bg-green-700 text-white font-medium shadow-md hover:shadow-lg transition-all duration-200" %>
    </div>
  <% end %>
</div>